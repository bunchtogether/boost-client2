{
  "name": "@bunchtogether/boost-client",
  "version": "1.1.11",
  "main": "dist/index.js",
  "repository": "https://github.com/bunchtogether/boost-client2.git",
  "author": "johnwehr@bunchtogether.com",
  "scripts": {
    "build": "rm -rf ./dist; flow-remove-types ./src --out-dir ./dist && flow-copy-source ./src ./dist",
    "flow-typed": "./node_modules/.bin/flow-typed install --overwrite",
    "test": "yarn lint && yarn test:js",
    "test:js": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles tests",
    "lint": "npm run lint:js && npm run lint:flow",
    "lint:js": "eslint -c ./.eslintrc --no-eslintrc --fix --cache .",
    "lint:flow": "flow --show-all-errors",
    "coverage": "codecov",
    "documentation": "documentation readme src/index.js --section='API'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn documentation && yarn build && git add dist"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ],
    "transform": {
      "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-flow-strip-types": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "codecov": "^3.6.5",
    "cross-env": "^7.0.2",
    "documentation": "^12.3.0",
    "eslint": "^6.8.0",
    "eslint-config-bunchtogether": "^1.1.6",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-flowtype-errors": "^4.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "expect": "^25.5.0",
    "flow-bin": "^0.125.1",
    "flow-copy-source": "^2.0.9",
    "flow-typed": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^25.5.0",
    "jest-diff": "^25.5.0",
    "jest-flow-transform": "^1.0.1",
    "react": "^16.13.1"
  },
  "dependencies": {
    "@bunchtogether/braid-client": "^1.1.32",
    "@callstack/async-storage": "^2.0.3",
    "hoist-non-react-statics": "^3.3.2",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.20",
    "query-string": "^6.12.1",
    "redux-saga": "^1.1.3",
    "superagent": "^5.2.2",
    "superagent-prefix": "^0.0.2",
    "superagent-use": "^0.1.0"
  },
  "peerDependencies": {
    "flow-bin": "^0.123.0",
    "react": "^16.13.1"
  }
}
