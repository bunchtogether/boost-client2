{
  "name": "@bunchtogether/boost-client",
  "version": "1.0.21",
  "main": "dist/index.js",
  "repository": "https://github.com/bunchtogether/boost-client2.git",
  "author": "johnwehr@bunchtogether.com",
  "scripts": {
    "build": "rm -rf ./dist; flow-remove-types ./src --out-dir ./dist && flow-copy-source ./src ./dist",
    "flow-typed": "./node_modules/.bin/flow-typed install --overwrite",
    "test": "yarn lint && yarn test:js",
    "test:js": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles tests",
    "lint": "npm run lint:js && npm run lint:flow",
    "lint:js": "eslint -c ./.eslintrc --no-eslintrc --fix --cache .",
    "lint:flow": "flow --show-all-errors",
    "coverage": "codecov",
    "start-pre-commit": "git stash -q --keep-index",
    "end-pre-commit": "git add -u && git stash pop -q",
    "documentation": "documentation readme src/index.js --section='API'"
  },
  "pre-commit": [
    "lint",
    "start-pre-commit",
    "build",
    "documentation",
    "end-pre-commit"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ],
    "transform": {
      "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
    }
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "codecov": "^3.3.0",
    "cross-env": "^5.2.0",
    "documentation": "^9.3.1",
    "eslint": "^5.16.0",
    "eslint-config-bunchtogether": "^1.1.6",
    "eslint-plugin-flowtype": "^3.5.1",
    "eslint-plugin-flowtype-errors": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "expect": "^24.7.1",
    "flow-bin": "^0.96.0",
    "flow-copy-source": "^2.0.3",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.5.1",
    "jest": "^24.7.1",
    "jest-diff": "^24.7.0",
    "jest-flow-transform": "^1.0.1",
    "pre-commit": "^1.2.2",
    "react": "^16.8.6"
  },
  "dependencies": {
    "@bunchtogether/braid-client": "^1.1.13",
    "@callstack/async-storage": "^1.1.0",
    "hoist-non-react-statics": "^3.3.0",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.11",
    "query-string": "^6.4.2",
    "redux-saga": "^1.0.2",
    "superagent": "^5.0.2",
    "superagent-prefix": "^0.0.2",
    "superagent-use": "^0.1.0"
  },
  "peerDependencies": {
    "react": "^16.8.6"
  }
}
